@{
    ViewData["Title"] = "Home Page";
}

<div class="home">
    <div class="PParent">
        <div class="imgWrapper">
        </div>
    </div>
    <div class="homeText">
        <a asp-controller="Blogs" asp-action="Index" style="text-decoration: none; color: currentColor;">
            <h1 class=" display-4">Recipes</h1>
            <h2>Find something tasty.</h2>
        </a>
    </div>
    <div class="two align-self-end">
        <div class="imgWrapper next">
        </div>
    </div>
</div>

<script type="text/javascript">
    const imgBody = document.querySelector("body");
    const giraffe = document.querySelectorAll(".imgWrapper")

    for (let i = 0; i < giraffe.length; i++) {
        giraffe[i].addEventListener("mousemove", (event) => {
            const { currentTarget: target } = event;
            const coordX = event.clientX;
            const coordY = event.clientY;
            let rect = target.getBoundingClientRect();

            let x = coordX - rect.left - rect.width / 2;
            let y = coordY - rect.top - rect.height / 2;

            if (i === 0) {
                const rotateX = (-y / rect.height) * 20;
                const rotateY = (x / rect.width) * 20;

                giraffe[0].style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            }
            if (i === 1) {

                const rotateX = (y / rect.height) * 20;
                const rotateY = (-x / rect.width) * 20;

                giraffe[1].style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
            }
        })
        giraffe[i].addEventListener('mouseleave', () => {
            giraffe[i].style.transform = 'rotateX(0deg) rotateY(0deg)';
        });
    }
</script>